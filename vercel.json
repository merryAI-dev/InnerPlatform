{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/bff.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/internal/workers/work-queue/run",
      "schedule": "15 2 * * *"
    },
    {
      "path": "/api/internal/workers/outbox/run",
      "schedule": "30 2 * * *"
    },
    {
      "path": "/api/internal/workers/payroll/run",
      "schedule": "45 2 * * *"
    },
    {
      "path": "/api/internal/workers/monthly-close/run",
      "schedule": "0 3 * * *"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        { "key": "X-Content-Type-Options", "value": "nosniff" },
        { "key": "X-Frame-Options", "value": "DENY" },
        { "key": "Referrer-Policy", "value": "strict-origin-when-cross-origin" },
        { "key": "Permissions-Policy", "value": "camera=(), microphone=(), geolocation=()" },
        { "key": "X-DNS-Prefetch-Control", "value": "on" }
      ]
    }
  ],
  "rewrites": [
    {
      "source": "/api/v1",
      "destination": "/api/bff?__path=/api/v1"
    },
    {
      "source": "/api/v1/:path*",
      "destination": "/api/bff?__path=/api/v1/:path*"
    },
    {
      "source": "/api/internal/workers/work-queue/run",
      "destination": "/api/bff?__path=/api/internal/workers/work-queue/run"
    },
    {
      "source": "/api/internal/workers/outbox/run",
      "destination": "/api/bff?__path=/api/internal/workers/outbox/run"
    },
    {
      "source": "/api/internal/workers/payroll/run",
      "destination": "/api/bff?__path=/api/internal/workers/payroll/run"
    },
    {
      "source": "/api/internal/workers/monthly-close/run",
      "destination": "/api/bff?__path=/api/internal/workers/monthly-close/run"
    },
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ]
}
