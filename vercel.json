{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/bff.js": {
      "maxDuration": 60
    }
  },
  "crons": [
    {
      "path": "/api/internal/workers/work-queue/run",
      "schedule": "15 2 * * *"
    },
    {
      "path": "/api/internal/workers/outbox/run",
      "schedule": "30 2 * * *"
    }
  ],
  "routes": [
    {
      "src": "^/api/v1$",
      "dest": "/api/bff?__path=/api/v1"
    },
    {
      "src": "^/api/v1/(.*)$",
      "dest": "/api/bff?__path=/api/v1/$1"
    },
    {
      "src": "^/api/internal/workers/work-queue/run$",
      "dest": "/api/bff?__path=/api/internal/workers/work-queue/run"
    },
    {
      "src": "^/api/internal/workers/outbox/run$",
      "dest": "/api/bff?__path=/api/internal/workers/outbox/run"
    },
    {
      "handle": "filesystem"
    },
    {
      "src": "^/(.*)$",
      "dest": "/index.html"
    }
  ]
}
